# make/cbuff

CC = cc
CFLAGS = -Wall -Wextra -std=c99 -I$(HOME)/git/ds/inc -g

SRC = $(HOME)/git/ds/src/cbuff.c
TEST = $(HOME)/git/ds/test/cbuff_test.c
OUT = $(HOME)/git/ds/bin/debug/cbuff_test

all: $(OUT)

$(OUT): $(SRC) $(TEST)
	$(CC) $(CFLAGS) $(SRC) $(TEST) -o $(OUT)

run: all
	$(OUT)

clean:
	rm -f $(OUT)

