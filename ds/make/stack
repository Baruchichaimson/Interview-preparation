ROOT := $(HOME)/git/ds

CC ?= gcc
CFLAGS ?= -Wall -Wextra -std=c99 -I$(ROOT)/inc -g

SRC = $(ROOT)/src/stack.c $(ROOT)/test/stack_test.c

TARGET = $(ROOT)/bin/debug/stack_test

all: $(TARGET)

$(TARGET): $(SRC)
	@echo "Compiling $@..."
	$(CC) $(CFLAGS) $^ -o $@

run: $(TARGET)
	@echo "Running $@..."
	$^

clean:
	@echo "Cleaning $(TARGET)..."
	rm -f $(TARGET)

.PHONY: all clean run

