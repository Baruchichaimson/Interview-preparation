# File: make/vector

CC ?= gcc
CFLAGS ?= -Wall -Wextra -std=c99 -I$(HOME)/git/ds/inc -g

SRC = $(HOME)/git/ds/src/vector.c $(HOME)/git/ds/test/vector_test.c

TARGET = $(HOME)/git/ds/bin/debug/vector_test

all: $(TARGET)

$(TARGET): $(SRC)
	@echo "Compiling $@..."
	$(CC) $(CFLAGS) $^ -o $@

run: $(TARGET)
	@echo "Running $@..."
	$^

clean:
	rm -f $(TARGET) *.o

.PHONY: all clean run

